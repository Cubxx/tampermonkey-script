{
  "type": "module",
  "scripts": {
    "format": "prettier --write 'src/**/*' 'types/**/*' 'scripts/**/*'",
    "type-check": "tsc --noEmit",
    "meta": "node scripts/meta.js"
  },
  "dependencies": {
    "lit-html": "^3.1.4",
    "sober": "^0.2.17"
  },
  "devDependencies": {
    "@types/wicg-file-system-access": "^2023.10.5",
    "csstype": "^3.1.3",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "typescript": "^5.5.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "jsdocTagsOrder": "{\"template\": 24.5}",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
